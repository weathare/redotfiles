off                    # sudo shutdown -h now
reboot                 # sudo shutdown -r now
reload                 # source ~/.bashrc
h                      # history
keys                   # ssh-add -l
extract                # enhance unpack archived files.
date +%Y%m%d
date +%Y%m%d%H%M%S
date +%Y-%m-%dT%T%:z

