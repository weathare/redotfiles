# apt
sudo apt-get install -y `apt-cache search . | fzf -m | awk -v ORS=' ' '{print $1}; END{print "\n"}'`
sudo apt-get purge -y `dpkg -l | fzf -m | awk -v ORS=' ' '{print $2}; END{print "\n"}'`
apt-cache search . | fzf
apt-cache policy `apt-cache search . | fzf | awk '{print $1}'`
dpkg -L `dpkg -l | fzf | awk '{print $2}'` | more
sudo apt-get update && sudo apt-get upgrade -y
sudo apt-get autoremove && sudo apt-get clean

